  // Controls All Of The Motor Controllers Of The Robot
  // To See The Other Programming, It Isn't Done Yet, Come Back Later
  
  
#pragma config(Hubs,  S1, HTMotor,  HTMotor,  none,     none)
#pragma config(Sensor, S1,     ,               sensorI2CMuxController)
#pragma config(Motor,  mtr_S1_C1_1,     Left,          tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C1_2,     Right,         tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C2_1,     ArmA,          tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C2_2,     ArmB,          tmotorTetrix, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

#include "JoystickDriver.c"
#include "ButtonsDefs.h"



void initializeRobot()
{
	// Place code here to sinitialize servos to starting positions.
	// Sensors are automatically configured and setup by ROBOTC. They may need a brief time to stabilize.qwe

	return;
}



task main()
{
	initializeRobot();

	waitForStart();   // wait for start of tele-op phase
	while(true) {
		getJoystickSettings(joystick);

		if (joystick.joy1_TopHat == pov_north) //Move Forwards
		{
			motor (Left) = 75;
			motor (Right) = -75;
		}
		else if (joystick.joy1_TopHat == pov_south) //Move Backwards
		{
			motor (Left) = -75;
			motor (Right) = 75;
		}
		else if (joystick.joy1_Buttons == button_06) //Turn Left
		{
			motor (Left) = 75;
			motor (Right) = 75;
		}
		else if (joystick.joy1_Buttons == button_07) //Turn Right
		{
			motor (Left) = -75;
			motor (Right) = -75;
		}
		else if (joystick.joy1_Buttons == button_04)
		{
			motor (ArmA) = 50;
		}
		else if (joystick.joy1_Buttons == button_05)
		{
			motor (ArmA) = -50;
		}
		else if (joystick.joy1_Buttons == button_y)
		{
			motor (ArmB) = 50;
		}

		else if (joystick.joy1_Buttons == button_a)
		{
			motor (ArmB) = -50;
		}
		else {
			motor (Left) = 0;
			motor (Right) = 0;
			motor (ArmA) = 0;
			motor (ArmB) = 0;
		}
	}
}

